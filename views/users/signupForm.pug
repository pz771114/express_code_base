extends ../layout

block content
  h1= title
  form.signup-form
    .form-group
      label(for='name') Name
      input.form-control(type='text' id='name' name='name')
    .form-group
      label(for='email') Email
      input.form-control(type='email' id='email' name='email')
    .form-group
      label(for='password') Passsword
      input.form-control(type='password' id='password' name='password')  
    button.btn.btn-primary(type='submit') Submit